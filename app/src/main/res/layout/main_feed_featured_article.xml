<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/featured_article_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/featured_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/featured_article_image"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/featured_article_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bylineText"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/featured_article_title"
        android:textAllCaps="true"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>