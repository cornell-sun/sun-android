<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/main_feed_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/sonnenstrahl_ausgezeichnet"
        android:gravity="center"
        android:text="@string/app_heading"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_feed_section_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_item_main_feed_section"
        app:layout_constraintTop_toBottomOf="@id/main_feed_header" />
</androidx.constraintlayout.widget.ConstraintLayout>